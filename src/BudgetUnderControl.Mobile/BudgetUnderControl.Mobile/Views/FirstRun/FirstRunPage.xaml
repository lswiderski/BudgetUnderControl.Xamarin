<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetUnderControl.Views.FirstRunPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="Start">
                <Button x:Name="settings" Text="&#xf013;" Clicked="OnSettingsClickedAsync" FontFamily="FAS" AbsoluteLayout.LayoutBounds="0.94,1.18,0.5,0.25" />
            </StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand">
                <Label Text="Welcome in Budget Under Control App"
                HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Button x:Name="login" Text="&#xf2f6; Login" Clicked="OnLoginButtonClickedAsync" FontFamily="FAS" />
                <Label Text="Or"
                HorizontalOptions="CenterAndExpand" />
                <Button x:Name="createLocalAccount" Text="Create local account" Clicked="OnCreateNewUserClickedAsync" />
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>