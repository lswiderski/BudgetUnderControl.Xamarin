<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetUnderControl.Views.OverviewPage"
             xmlns:local="clr-namespace:BudgetUnderControl.Views;assembly=BudgetUnderControl.Mobile"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             Title="Overview Page">
    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="#F7F7F7">
            <Frame AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,.5" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" Margin="10">
                <ScrollView>
                    <StackLayout HorizontalOptions="FillAndExpand" x:Name="mainFrame" >
                </StackLayout>
                </ScrollView>
            </Frame>
            <local:AdMobView HeightRequest="100" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,1,1,.1"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>